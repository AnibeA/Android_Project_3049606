<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme._3049606"
        tools:targetApi="31">

        <!-- MainActivity is set as the launcher activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme._3049606">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- DecksActivity -->
        <activity
            android:name=".DecksActivity"
            android:exported="false"
            android:label="@string/title_activity_decks"
            android:theme="@style/Theme._3049606" />

        <!-- com.griffith.a3049606.CardInterface Activity -->
        <activity
            android:name=".CardInterface"
            android:exported="false"
            android:label="@string/title_activity_card_interface"
            android:theme="@style/Theme._3049606" />

        <!-- AddDeck Activity -->
        <activity
            android:name=".AddDeck"
            android:exported="false"
            android:label="@string/title_activity_add_deck"
            android:theme="@style/Theme._3049606" />
    </application>

</manifest>
